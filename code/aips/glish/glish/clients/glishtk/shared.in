$(LIBDIR)/libglishtk.exp: libglishtk$(GSUFFIX)
	$(MKHIER) $(LIBDIR)
	$(INSTALL_DATA) libglishtk.exp $(LIBDIR)
#FI

GlishTk$(SUFFIX): $(LOBJS)
	$(MK_LIB) GlishTk$(SUFFIX) $(LOBJS) $(LDOBJ_LIBS) $(DL_LIBS) 2>&1 | head -100

$(LIBDIR_P)/GlishTk$(SUFFIX): GlishTk$(SUFFIX)
	$(MKHIER) $(LIBDIR_P)
